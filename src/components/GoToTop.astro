---
import Icon from "./Icon.astro";
---

<div class="go-to-top-wrapper">
	<a class="go-to-top-link" href="#header">
		<div class="go-to-top">
			<Icon size="40" name="arrow-up" />
		</div>
	</a>
</div>

<style>
	.go-to-top-wrapper {
		place-items: center;
		display: grid;
		margin: 60px 0;
	}
	.go-to-top-link {
		display: inline-block;
		padding: 32px 20px;
		border: 1px solid var(--black);
		border-radius: 60px;
		color: var(--black);
		text-align: center;
	}
	.go-to-top {
	}
</style>
