---
import Icon from "./Icon.astro";
---

<header id="header" class="header">
	<nav class="navigation">
		<div class="navigation__list">
			<a class="navigation__link" href="/public">Home</a>
			<a class="navigation__logo" href="/public">
				<Icon name="logo" size="52" />
			</a>
			<a class="navigation__link" href="/about">About</a>
		</div>
	</nav>
</header>

<style>
	.header {
		padding: 16px 0 10px;
	}

	.navigation__list {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		justify-items: center;
		align-items: center;
		margin: 0;
		padding: 0;

		:first-child {
			justify-self: start;
		}

		:last-child {
			justify-self: end;
		}
	}

	.navigation__link {
		position: relative;
		color: var(--black);
		text-transform: uppercase;
		text-decoration: none;
		font-size: var(--font-size-normal);

		&:hover:after {
			content: "";
			position: absolute;
			right: 0;
			bottom: -2px;
			width: 100%;
			height: 2px;
			background: var(--black);
		}
	}

	.navigation__logo {
		display: block;
		border-radius: 50%;
		color: var(--logo-color);
		line-height: 0.5;
	}
</style>
