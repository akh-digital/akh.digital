---
import Icon from "./icon.astro";
---

<header id="header" class="header">
	<nav class="navigation">
		<ul class="navigation__list">
			<li class="navigation__item">
				<a class="navigation__link" href="/">Home</a>
			</li>
			<li>
				<a class="navigation__logo" href="/">
					<Icon name="logo" size="52" />
				</a>
			</li>
			<li>
				<a class="navigation__link" href="/about">About</a>
			</li>
		</ul>
	</nav>
</header>

<style>
	.header {
		padding: 16px 0 10px;
	}

	.navigation__list {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin: 0;
		padding: 0;
		list-style: none;
	}

	.navigation__link {
		position: relative;
		color: var(--black);
		text-transform: uppercase;
		text-decoration: none;
		font-size: 24px;

		&:hover:after {
			content: "";
			position: absolute;
			right: 0;
			bottom: -2px;
			width: 100%;
			height: 2px;
			background: var(--black);
		}
	}

	.navigation__logo {
		display: block;
		border-radius: 50%;
		color: var(--logo-color);
		line-height: 0.5;
	}
</style>
