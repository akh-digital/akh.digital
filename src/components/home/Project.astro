---
import Icon from "../Icon.astro";
const { project, number, slug } = Astro.props;
const tags = project.tags;
---

<article class="project">
	<header class="project_header">
		<span class="project_header_number">
			{number} /
		</span>
		<span class="project_header_date">
			{new Date(project.date).getFullYear()}
		</span>
	</header>
	<h3 class="projects__title">
		<a class="projects__link" href={slug}>
			{project.title}
		</a>
		<Icon name="arrow-right-up" />
	</h3>
	<div class="projects_tag_list">
		{tags.map((tag) => <span class="projects__tag"> {tag} </span>)}
	</div>
</article>

<style>
	.project {
		position: relative;
	}
	.project_header {
		display: flex;
		justify-content: space-between;
		padding-bottom: 10px;
		border-bottom: 2px solid var(--black);
	}

	.projects__title {
		word-break: break-all;
		display: flex;
		justify-content: space-between;
		align-items: center;

		svg {
			flex-shrink: 0;
			width: var(--font-size-h1);
			height: var(--font-size-h1);
		}
	}

	.projects__link {
		color: var(--black);
		text-decoration: none;
		font-weight: 500;
		font-size: var(--font-size-h1);

		&::before {
			content: "";
			position: absolute;
			inset: 0;
		}

		&:focus-visible {
			outline: none;
		}

		&:focus-visible::before {
			outline: 2px solid var(--color-focus-ring);
			outline-offset: 2px;
		}
	}

	.projects_tag_list {
		display: flex;
		flex-wrap: wrap;
		gap: calc(var(--font-size-extra-small) / 2);
	}

	.projects__tag {
		padding: calc(var(--font-size-extra-small) / 2)
			calc(var(--font-size-extra-small));
		border: 1px solid var(--black);
		border-radius: calc(var(--font-size-small) * 1.5);
		font-size: var(--font-size-extra-small);
	}
</style>
