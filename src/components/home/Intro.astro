---
function generateGoogleMapsLink(lat, lng) {
	return `https://www.google.com/maps?q=${lat},${lng}`;
}

function convertDMSToDecimal(dmsStr) {
	let parts = dmsStr.split(/[°'"]/);
	let degrees = parseFloat(parts[0]);
	let minutes = parseFloat(parts[1]);
	let seconds = parseFloat(parts[2]);

	return degrees + minutes / 60 + seconds / 3600;
}

let latitude = "59°56'19.07\" N";
let longitude = "30°18'50.87\" E";

const lat = convertDMSToDecimal(latitude); // 59.93863
const long = convertDMSToDecimal(longitude); // 30.3144083

const locationLink = generateGoogleMapsLink(lat, long);
---

<section class="intro__additional">
	<div class="intro__additional-location">
