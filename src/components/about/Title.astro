---
import { about } from "../../lib/config.js";
import { parseDescription } from "../../lib/parseDescription.js";

const aboutData = about().about;
const descList = parseDescription(aboutData.desc);
---

<section class="about">
	<div class="about__about-me_wrapper">
		<div class="about__about-me_text">
			<h2>
				{aboutData.title}
			</h2>
			{descList.map((d) => <p>{d}</p>)}
		</div>
		<div class="about__about-me_img_wrapper">
			<img src="" alt="avatar" class="about__about-me_img" />
		</div>
	</div>
</section>
