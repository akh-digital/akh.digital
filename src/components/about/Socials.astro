---
import SocialLink from "./SocialLink.astro";
import Links from "./components/Links.astro";
import { about } from "../../lib/config.js";

const socials = about().social;
const list = socials.list;
---

<Links>
	<Fragment slot="header">
		{socials.title}
	</Fragment>
	<Fragment slot="second-title">
		{socials.second_title}
	</Fragment>
	<Fragment slot="links-list">
		{
			list.map((social) => (
				<SocialLink url={social.url} title={social.title} />
			))
		}
	</Fragment>
</Links>
