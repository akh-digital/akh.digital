---
import Icon from "../../Icon.astro";
---

<section class="links">
	<div>
		<h1 class="links__big-title">
			<slot name="title" />
		</h1>
		<div class="links__lists_wrapper">
			<span class="links__title">
				<div class="links__title_container">
					<slot name="second-title" />
					<Icon size="32" name="arrow-right" />
				</div>
			</span>
			<ul class="links__list">
				<slot name="links-list" />
			</ul>
		</div>
	</div>
</section>

<style>
	.links {
		margin-top: 40px;
	}

	.links__big-title {
		font-weight: 400;
		font-size: var(--font-size-h2);
	}

	.links__list {
		display: grid;
		gap: 12px;
		margin: 0;
	}

	.links__lists_wrapper {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(186px, 1fr));
		line-height: 1.15;
		font-size: var(--font-size-normal);

		@media (max-width: 600px) {
			grid-template-columns: repeat(1, 1fr);
		}
	}

	.links__title_container {
		display: flex;
		justify-items: center;
		align-items: center;
		font-size: var(--font-size-h2);
	}
</style>
