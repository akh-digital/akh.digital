---
import { about } from "../../lib/config.js";
import Icon from "../Icon.astro";
import Cv from "./Cv.astro";

const cv = about().cv;
const list = cv.list;
---

<section class="links">
	<div>
		<h1 class="links__big-title">
			{cv.title}
		</h1>
		<div class="links__lists_wrapper">
			<span class="links__title">
				<div class="links__title_container">
					{cv.second_title}
					<Icon name="arrow-right" />
				</div>
			</span>
			<ul class="links__list">
				{
					list.map((social) => (
						<Cv url={social.url} title={social.title} />
					))
				}
			</ul>
		</div>
	</div>
</section>

<style>
	h1 {
		font-size: var(--font-size-h1);
		font-family: var(--font-family-heading);
	}

	.links__lists_wrapper {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(186px, 1fr));
	}

	.links__title_container {
		display: flex;
		justify-items: center;
		align-items: center;
		font-size: var(--font-size-h2);
	}
</style>
