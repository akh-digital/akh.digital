---
import { about } from "../../lib/config.js";

const skills = about().skills;
---

<section class="skills">
	<div class="wrapper">
		{
			skills.map((skill) => (
				<div class="item">
					<div class="item-name">{skill.title}</div>
					<ul class="list">
						{skill.list.map((item) => (
							<li class="list-item">{item}</li>
						))}
					</ul>
				</div>
			))
		}
	</div>
</section>

<style>
	.skills {
		margin-top: 160px;
	}

	.wrapper {
		display: grid;
		grid-template-columns: repeat(2, 1fr);

		@media (width < 1024px) {
			grid-template-columns: repeat(1, 1fr);
		}
	}

	.item-name {
		font-weight: 400;
		font-size: var(--font-size-h1);
	}
	.list-item {
		line-height: 1.15;
		font-size: var(--font-size-h2);
	}
</style>
