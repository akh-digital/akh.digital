---
import "../styles/index.css";
const { title: propsTitle } = Astro.props;
const title = import.meta.env.DEV ? `[DEV] ${propsTitle}` : propsTitle;
---

<!doctype html>
<html class="page" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="preload"
			href="/fonts/SuisseIntl.woff2"
			crossorigin
			as="font"
			type="font/woff2"
		/>
		<link
			rel="preload"
			href="/fonts/SuisseIntlBold.woff2"
			crossorigin
			as="font"
			type="font/woff2"
		/>
		<title>{title}</title>
	</head>
	<body class="page__body">
		<slot />
	</body>
</html>

<style is:global>
	.page {
		background-color: var(--body-color);
		color: var(--text-color);

		@media (prefers-reduced-motion: no-preference) {
			scroll-behavior: smooth;
		}
	}

	.page__body {
		margin: 0;
		line-height: 1;
		font-size: var(--font-size-normal);
		font-family: var(--font-family-text);
	}

	.column {
		@media (width >= 1760px) {
			padding-inline: calc((100% - 1676px) / 2);
		}
		@media (1024px <= width < 1760px) {
			padding-inline: 42px;
		}
		@media (width < 1024px) {
			padding-inline: 20px;
		}
	}

	.divider {
		margin: 20px 0;
		width: 100%;
		border-top: 2px solid var(--black);
	}

	.divider.is-white {
		border-top: 2px solid var(--white);
	}
</style>
