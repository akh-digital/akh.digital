---
import BaseLayout from "../layouts/BaseLayout.astro";
import Projects from "../components/home/Projects.astro";
import GoToTop from "../components/GoToTop.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Expertise from "../components/home/Expertise.astro";
import Intro from "../components/home/Intro.astro";
import Hero from "../components/home/Hero.astro";
import Photo from "../components/home/Photo.astro";
import YaMetrika from "../components/third-party-script/YaMetrika.astro";
import { global } from "../lib/config";
---

<BaseLayout>
	<slot slot="head">
		<title>{global().title}</title>
	</slot>
	<main class="main column">
		<Header />
		<Hero />
		<Intro />
		<Photo />
		<Expertise />
		<Projects />
		<GoToTop />
	</main>
	<Footer />
	<YaMetrika />
</BaseLayout>

<style>
	:root {
		--logo-color: var(--primary);
	}
</style>
