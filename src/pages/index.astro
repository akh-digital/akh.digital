---
import BaseLayout from "../layouts/BaseLayout.astro";
import Brands from "../components/brands.astro";
import Projects from "../components/projects.astro";
import GoToTop from "../components/go-to-top.astro";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
---

<BaseLayout>
	<slot slot="head">
		<title>[DEV] Aleks Kholopov — Digital Product Designer.</title>
	</slot>
	<Header />
	<main class="main">
		<div class="divider"></div>
		<div class="intro__wrapper">
			<p class="intro__site-name">AKH</p>
			<h1 class="intro__name">Aleks Kholopov</h1>
		</div>
		<div class="divider"></div>
		<section class="intro__additional">
			<div>
				<p>Based in Saint-Peterburg, Russia</p>
				<p>*Available Worldwide</p>
			</div>
			<h1 class="intro__additional-name">Product Designer</h1>
			<p class="intro__additional-cords">
				<span>59°56'19.07' N</span>
				<span>30°18'50.87' E</span>
			</p>
		</section>
		<section>
			<h1>Expertise</h1>
		</section>
		<Projects />
		<Brands />
		<GoToTop />
	</main>
	<Footer />
</BaseLayout>
